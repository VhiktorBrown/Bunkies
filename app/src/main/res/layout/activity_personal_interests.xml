<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account_setup.personal.PersonalTraitsActivity">

    <ImageView
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:tint="@color/textGrey"
        android:contentDescription="@string/go_back"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_interests"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/go_back"
        app:layout_constraintBottom_toBottomOf="@+id/go_back"
        android:textSize="@dimen/_16ssp"
        android:fontFamily="@font/montserrat_semi_bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/proceed_button">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_20sdp">

            <com.google.android.material.chip.Chip
                android:id="@+id/music"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Music"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/photography"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Photography"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/swimming"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Swimming"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/fashion"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Fashion"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/blogging"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Blogging"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/shopping"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Shopping"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/writing"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Writing"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/sports"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Sports"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/hiking"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Responsible"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_sense_of_humour"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Hiking"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/cooking"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Cooking"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/netflix_and_chills"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Netflix and Chills"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/playing_instruments"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Playing instruments"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/reading"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Reading"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/taking_strolls"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Taking strolls"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/making_new_friends"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Making new friends"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/doing_chores"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Doing chores"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/acting"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/montserrat_regular"
                style="@style/customChipStyle"
                android:text="Acting"/>


        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/proceed_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintStart_toStartOf="@+id/go_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/primary_button"
        android:text="@string/proceed"
        android:textSize="@dimen/_14ssp"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textColor="@color/secondary" />

</androidx.constraintlayout.widget.ConstraintLayout>